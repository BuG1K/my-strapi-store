{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "price": {
      "type": "decimal"
    },
    "oldPrice": {
      "type": "decimal"
    },
    "category": {
      "type": "string"
    },
    "isNewArrival": {
      "type": "boolean",
      "default": true
    },
    "rating": {
      "type": "decimal"
    },
    "reviewCount": {
      "type": "decimal"
    },
    "inStock": {
      "type": "boolean"
    },
    "material": {
      "type": "string"
    },
    "dimensions": {
      "type": "string"
    },
    "discount": {
      "type": "integer"
    },
    "gradient": {
      "type": "string"
    },
    "img": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  }
}
